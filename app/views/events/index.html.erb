<% provide(:page_title, @title) %>

<section id="events">
  <div class="container">
    <div class="row mt-5">
      <div class="col d-flex justify-content-center">
        <% if yield(:page_title) == "Upcoming" %>
          <h1>Upcoming</h1>
        <% else %>
          <h1>Past Events</h1>
        <% end %>
      </div>
    </div>
    <% if !@events.nil? %>
      <div class="row">
        <%= render @events %>
      </div>

      <div class="row justify-content-center mt-5">
        <%= will_paginate @events, class: 'pagination' %>
      </div>

    <% else %>
      <div class="row">
        <div class="col px-0">
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="production-tab" data-toggle="tab" href="#production" role="tab" aria-controls="production" aria-selected="true">Performance & Production</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Musical Development</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="bonding-tab" data-toggle="tab" href="#bonding" role="tab" aria-controls="bonding" aria-selected="false">Bonding Activities</a>
            </li>
          </ul>
        </div>
      </div>
      <div class="row">
        <div class="tab-content" id="myTabContent" style="width: 100%;">
          <div class="tab-pane fade show active" id="production" role="tabpanel" aria-labelledby="production-tab">
            <div class="row height">
              <% if @production_events %>
                <%= render @production_events %>
                <%= will_paginate @production_events, class: 'pagination' %>
              <% end %>
            </div>
          </div>
          <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <% if @development_events %>
              <%= render @development_events %>
              <%= will_paginate @development_events, class: 'pagination' %>
            <% end %>
          </div>
          <div class="tab-pane fade" id="bonding" role="tabpanel" aria-labelledby="bonding-tab">
            <% if @bonding_events %>
              <%= render @bonding_events %>
              <%= will_paginate @bonding_events, class: 'pagination' %>
            <% end %>
          </div>
        </div>
      </div>

    <% end %>

  </div>
</section>
