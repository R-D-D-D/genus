<% if yield(:page_title).include?("Home") %>
  <div class="container-fluid">
    <div class="row">
      <div class="col p-0">
        <div>
          <nav class="navbar navbar-expand-lg navbar-light py-1" id="navbar">
            <%= render 'layouts/navbar' %>
          </nav>
        </div>
      </div>
    </div>

    <div class="row home-bg" style="height: 90vh; overflow: auto;">
      <div class="container">

        <div class="row justify-content-center pt-4 welcome">
          <%= image_tag "welcome.png" %>
        </div>


        <div class="row">
          <div class="col">
            <div class="container mb-0" style="width: 900px">
              <div class="row">
                <div class="col">
                  <h1 class="home-text">NUS GUITAR ENSEMBLE</h1>
                </div>
              </div>
              <div class="row">
                <div class="col-2">

                </div>
                <div class="col-3">
                  <hr>
                </div>
                <div class="col-2 text-light">
                  <h2 class="font-italic">GENUS</h2>
                </div>
                <div class="col-3">
                  <hr>
                </div>
                <div class="col-2">

                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col d-flex justify-content-center">
            <p class="font-italic">A member of NUS Center For The Arts</p>
          </div>
        </div>

        <!-- begin of 4 icons -->
        <div class="row mt-4">
          <div class="container d-flex justify-content-center pt-5 mt-1">
            <div class="row" style="width: 80%;">
              <div class="col-3">
                <div class="d-flex justify-content-center">
                  <%= link_to events_path(event_type: "Gallery") do %>
                    <i class="fas fa-photo-video fa-3x"></i>
                  <% end %>
                </div>
                <h5>Gallery</h5>
                <p>Check out our key events!</p>
              </div>

              <div class="col-3">
                <div class="d-flex justify-content-center">
                  <%= link_to events_path(event_type: "Upcoming") do %>
                    <i class="far fa-calendar-check fa-3x"></i>
                  <% end %>
                </div>
                <h5>Calendar</h5>
                <p>Find out more about upcoming events!</p>
              </div>

              <div class="col-3">
                <div class="d-flex justify-content-center">
                  <a href="https://www.youtube.com/user/NusGuitarEnsemble" target="_blank"><i class="fas fa-guitar fa-3x"></i></a>
                </div>
                <h5>Past Production</h5>
                <p>Watch videos from our previous concerts!</p>
              </div>

              <div class="col-3">
                <div class="d-flex justify-content-center">
                  <%= link_to join_us_path do %>
                    <i class="far fa-address-book fa-3x"></i>
                  <% end %>
                </div>
                <h5>Contact Us</h5>
                <p>For any inquiries</p>
              </div>
            </div>
          </div>
        </div>
        <!-- end of 4 icons -->

      </div>
    </div>
  </div>

<% else %>

  <div class="container-fluid">
    <div class="row">
      <div class="col p-0">
        <nav class="navbar navbar-expand-lg navbar-light" id="navbar">
          <%= render 'layouts/navbar' %>
        </nav>
      </div>
    </div>
  </div>
<% end %>